<%= turbo_stream_from :rooms %>

<%= turbo_frame_tag :rooms do %>
  <%= render @rooms, class: "mr-2" %>
<% end %>

<% if user_signed_in? %>
  <%= form_with model: @new_room, class: "mt-2" do |f| %>
    <%= f.submit "New Room", class: "group relative w-32 flex justify-center py-2 px-4 border 
                            border-transparent text-sm font-medium rounded-md text-white 
                            bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 
                            focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer" %>
  <% end %>
<% end %>